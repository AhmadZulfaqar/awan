<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bm"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.akarumbi.myintranetapps.activity.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/logo1" />

    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.34"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="30dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_timesheet"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:layout_below="@+id/editText"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textColor="@android:color/white"
        android:text="Stay signed in" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_timesheet"
        android:layout_alignLeft="@+id/btn_timesheet"
        android:layout_alignRight="@+id/btn_timesheet"
        android:layout_alignStart="@+id/btn_timesheet"
        android:layout_below="@+id/editText2"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:text="Sign In" />

    <TextView
        android:id="@+id/txtForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="Forgot Password?"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akarumbi.myintranetapps.activity.ApplyTimesheet">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:text="Edit Entry For -2017-09-05"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="31dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical">

                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/Project"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView27"
                    android:layout_alignLeft="@+id/textView27"
                    android:layout_alignRight="@+id/textView27"
                    android:layout_alignStart="@+id/textView27"
                    android:layout_marginTop="40dp"
                    android:hint="Select...."
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Project"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />
                //android:layout_alignParentStart="true"
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="90dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Approver"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:text="-"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
                //android:layout_alignParentStart="true"
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="160dp"
                android:orientation="vertical">

                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/Task"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView27"
                    android:layout_alignLeft="@+id/textView27"
                    android:layout_alignRight="@+id/textView27"
                    android:layout_alignStart="@+id/textView27"
                    android:layout_marginTop="40dp"
                    android:hint="Select...."
                    android:textColorHint="@android:color/black" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Task"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />
                //android:layout_alignParentStart="true"
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="250dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Hour"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView27"
                    android:layout_alignStart="@+id/textView27"
                    android:layout_below="@+id/textView27"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/editText3"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/editText3"
                    android:layout_toRightOf="@+id/editText3"
                    android:text="OT"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

                //android:layout_alignParentStart="true"
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="330dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Note"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignEnd="@+id/textView27"
                    android:layout_alignLeft="@+id/textView27"
                    android:layout_alignRight="@+id/textView27"
                    android:layout_alignStart="@+id/textView27"
                    android:layout_below="@+id/textView27"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black" />

                //android:layout_alignParentStart="true"
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="420dp"
                android:orientation="vertical">

                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/Status"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView27"
                    android:layout_alignLeft="@+id/textView27"
                    android:layout_alignRight="@+id/textView27"
                    android:layout_alignStart="@+id/textView27"
                    android:layout_marginTop="40dp"
                    android:hint="Select...."
                    android:textColorHint="@android:color/black" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Status"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />
                //android:layout_alignParentStart="true"
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="510dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Approver Notes"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:text="-"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
                //android:layout_alignParentStart="true"
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
